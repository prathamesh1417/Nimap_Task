@model IEnumerable<Nimap_Task.Models.Category>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Category List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .text-center h2 {
            color: #0056b3;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .text-center p {
            text-align: right;
            margin-bottom: 20px;
        }

        .text-center .btn {
            transition: background-color 0.3s, border-color 0.3s, color 0.3s;
        }

        .text-center .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .text-center .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-center .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .text-center .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table thead th {
            background-color: #0056b3;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

        .action-links a {
            margin-right: 5px;
            transition: background-color 0.3s, border-color 0.3s, color 0.3s;
        }

        .action-links .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .action-links .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .action-links .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .action-links .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .action-links .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .action-links .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="text-center mb-4">
            <h2>Category List</h2>
            <p>
                @Html.ActionLink("Create a Category", "Create", null, new { @class = "btn btn-success" })
                <a href="/Products/Index" class="btn btn-primary">View Products</a>
            </p>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td class="action-links">
                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>